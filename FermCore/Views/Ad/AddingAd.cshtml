@model FermCore.ViewModels.AdViewModel
@{
    ViewData["Title"] = "Добавление объявления";
}

<h2>Добавление объявления</h2>


<form asp-action="AddingAd" asp-controller="Ad" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите название</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Text">Введите описание</label>
            <input type="text" asp-for="Text" />
            <span asp-validation-for="Text" />
        </div>
        <div class="form-group">
            <label asp-for="AdTypesId">Тип Ad</label>
            <select asp-for="AdTypesId" asp-items="ViewBag.AdTypes"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn" />
        </div>
    </div>
</form>

